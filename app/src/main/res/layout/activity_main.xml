<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#92d1fc"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                app:srcCompat="@drawable/banklogo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#7bd0eb"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_rates"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:onClick="Enter_rate"
                    android:text="Отделения банкво"
                    android:textColor="#000000"
                    app:cornerRadius="2dp" />

                <Button
                    android:id="@+id/btn_departmet"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:onClick="Enter_department"
                    android:text="Курсы валют"
                    android:textColor="#000000"
                    app:cornerRadius="2dp" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="90dp"
                    android:backgroundTint="#FFFFFF"
                    android:onClick="Enter_log"
                    android:text="Вход"
                    android:textColor="#000000"
                    app:cornerRadius="2dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#00D9C0"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>